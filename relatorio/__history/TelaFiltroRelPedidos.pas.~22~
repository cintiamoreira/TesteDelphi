unit TelaFiltroRelPedidos;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Buttons, Vcl.Mask,
  RxToolEdit;

type
  TfrmTelaFiltroRelPedidos = class(TForm)
    lblData: TLabel;
    Label1: TLabel;
    edtDataInicio: TDateEdit;
    edtDataFim: TDateEdit;
    BitBtn1: TBitBtn;
    procedure BitBtn1Click(Sender: TObject);
  private
    { Private declarations }
    deveAbrirRelatorioMenuPrincipal: Boolean;
  public
    constructor Create(AOwner: TComponent;deveAbrirRelatorio: boolean);
    { Public declarations }
  end;

var
  frmTelaFiltroRelPedidos: TfrmTelaFiltroRelPedidos;

implementation

{$R *.dfm}

procedure TfrmTelaFiltroRelPedidos.BitBtn1Click(Sender: TObject);
begin
  if (edtDataFim.Date) < (edtDataInicio.Date) then begin
    MessageDlg('Data Final não pode ser maior que a Data Início',mtInformation,[mbok],0);
    edtDataFim.SetFocus;
    abort;
  end;
  if (edtDataFim.Date=0) OR (edtDataInicio.Date=0) then begin
    MessageDlg('Data Inicial ou Final são campos obrigatórios',MtInformation,[mbok],0);
    EdtDataInicio.SetFocus;
    abort;
  end;
  //indica para o MenuPrincipal que o relatorio deve ser aberto
  deveAbrirRelatorioMenuPrincipal := true;
  Close;
end;

constructor TfrmTelaFiltroRelPedidos.Create(AOwner: TComponent; deveAbrirRelatorio: boolean);
begin
  inherited Create(AOwner);
  deveAbrirRelatorioMenuPrincipal := deveAbrirRelatorio;
end;

end.
