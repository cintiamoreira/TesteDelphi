unit TelaFiltroRelPedidos;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Buttons, Vcl.Mask,
  RxToolEdit;

type
  TfrmTelaFiltroRelPedidos = class(TForm)
    lblData: TLabel;
    Label1: TLabel;
    edtDataInicio: TDateEdit;
    edtDataFim: TDateEdit;
    BitBtn1: TBitBtn;
    procedure BitBtn1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmTelaFiltroRelPedidos: TfrmTelaFiltroRelPedidos;

implementation

{$R *.dfm}

procedure TfrmTelaFiltroRelPedidos.BitBtn1Click(Sender: TObject);
begin
if edtDataInicio.Date > edtDataFim.Date then begin

  ShowMessage('Data final deve ser depois da data de inicio')
  abort;
end
else if edtDataInicio.Date = 0 or edtDataFim.Date = 0 then
  ShowMessage('Ambas as datas são obrigatórias')

    Close;
end;

end.
